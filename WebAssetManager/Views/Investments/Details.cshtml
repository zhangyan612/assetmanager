        <dt>
            Strategy Holdings
        </dt>
    @foreach (var i in Model.Allocations)
    {
        
        <dd>
            <p><b>@i.Strategy.Name</b> | Allocation: @i.Amount</p>
            <table class="table">
                <tr>
                    <th>Stock Name</th>
                    <th>Holding</th>
                    <th>Cost</th>
                    <th>Current Price</th>
                    <th>Gain</th>
                    <th>Weight</th>
                    <th>Target Allocation</th>


                </tr>
                @foreach(var a in i.Strategy.Positions){
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => a.StockName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => a.HoldingAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => a.CostPrice)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => a.CurrentPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => a.CurrentGain)
                        </td>
                        <td>
                            @String.Format("{0:P2}", a.Weight)
                        </td>
                        <td>
                            @String.Format("{0:n1}", ((i.Amount * a.Weight) / a.CurrentPrice))
                        </td>

                    </tr>
                }
            </table>
        </dd>
    }
