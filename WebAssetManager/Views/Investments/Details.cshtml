        <dt>
            Account Exposure
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Exposure)
        </dd>
        <dt>
            Available Cash
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AvailableCash)
        </dd>

        <dt>
            Return Amount
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ReturnAmount)
        </dd>

        <dt>
            Return Percentage
        </dt>
        <dd>
            @String.Format("{0:P2}", Model.ReturnPercent)
        </dd>

        <dt>
            Account Positions
        </dt>

        <dd>
            <table class="table">
                <tr>
                    <th>Stock Name</th>
                    <th>Current Price</th>
                    <th>Current Gain</th>
                </tr>
                @foreach (var i in Model.Positions)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => i.StockName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => i.CurrentPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => i.CurrentGain)
                        </td>
                    </tr>
                }
            </table>
        </dd>

